<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__title"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__vertretungsplan_filter"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/editText_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/settings__klasse_jahrgangsstufe_eingeben"
            android:inputType="textPersonName"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/buttonSpracheReligionSport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sprachen, Religionsunterricht, Sport fÃ¼r den Filter angeben"
            android:visibility="gone" />

        <include
            android:id="@+id/filter_content"
            layout="@layout/filter_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings__lehrer_names"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Switch
            android:id="@+id/switchLehrerDisplayFull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__switch_lehrer_names" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings__week_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Switch
            android:id="@+id/switchWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__week_switch" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Vertretungsplan in Textform statt in tabellarischer Form anzeigen"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Switch
            android:id="@+id/switch_vp_readable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertretungsplan in Textform statt in tabellarischer Form anzeigen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Allgemeine Informationen anzeigen (Sprechstunden, ...)"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Switch
            android:id="@+id/switch_vp_general"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allgemeine Informationen anzeigen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings__startseite"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/settings__startseiten_array" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Elternportal-Integration"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/btn_config_elternportal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Integration konfigurieren" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings__donate_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__donate_text" />

        <Button
            android:id="@+id/button_spenden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__donate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mit der App stimmt etwas nicht?"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/button_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zwischenspeicher leeren" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/settings__design"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings__design_hint"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <include layout="@layout/themes" />
    </LinearLayout>
</ScrollView>