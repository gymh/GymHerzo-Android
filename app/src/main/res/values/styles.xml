<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#90A4AE</item>
        <item name="colorPrimaryDark">#90A4AE</item>
        <item name="colorAccent">#00B0FF</item>
    </style>

    <style name="Red" parent="AppTheme">
        <item name="colorPrimary">#f44336</item>
        <item name="colorPrimaryDark">#f44336</item>
        <item name="colorAccent">#00B0FF</item>
    </style>

    <style name="Pink" parent="AppTheme">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#E91E63</item>
        <item name="colorAccent">#00E5FF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ToolbarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
